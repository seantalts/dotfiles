# ~/.profile: executed by the command interpreter for login shells.
# This file is not read by bash(1), if ~/.bash_profile or ~/.bash_login
# exists.
# see /usr/share/doc/bash/examples/startup-files for examples.
# the files are located in the bash-doc package.

# the default umask is set in /etc/profile; for setting the umask
# for ssh logins, install and configure the libpam-umask package.
#umask 022

TZ='America/New_York'; export TZ

# if running bash
if [ -n "$BASH_VERSION" ]; then
    # include .bashrc if it exists
    if [ -f "$HOME/.bashrc" ]; then
	. "$HOME/.bashrc"
    fi
fi

# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/bin" ] ; then
    PATH="$HOME/bin:$PATH"
fi
if [ -d "$HOME/Library/Haskell/bin/" ]; then
    PATH="$HOME/Library/Haskell/bin:$PATH"
fi

alias ls='ls -G -F'
EDITOR='vim'

# Colorize the Terminal
export CLICOLOR=1;


# if running bash
if [ -n "$BASH_VERSION" ]; then
    # startup virtualenv-burrito
    if [ -f "$HOME/.venvburrito/startup.sh" ]; then
        . "$HOME/.venvburrito/startup.sh"
    fi
fi

alias glol="git log --all --color --graph --pretty=format:'%Cred%h%Creset%x09%C(yellow)%d%Creset %s %C(cyan)(%cr) %C(blue)[%an]%Creset' --abbrev-commit"
export JAVA_HOME="/System/Library/Frameworks/JavaVM.framework/Home"
export MAVEN_OPTS="-Xmx512m -XX:MaxPermSize=128m"
export SBT_OPTS=-XX:MaxPermSize=256m
alias gc='git checkout'
alias ga='git add'
alias gs='git status'
alias gdc='git diff --cached'
alias gbd='git branch -d'
alias gundo='git reset --soft HEAD^'
alias gd='git diff'
alias gpum='git pull upstream master'
alias startpostgres="pg_ctl -D /usr/local/var/postgres -l /usr/local/var/postgres/server.log start"

### Added by the Heroku Toolbelt
export PATH="/usr/local/heroku/bin:$PATH"
#added by homebrew
export PATH=$HOME/gocode/bin:/usr/local/bin:$PATH

PATH=$PATH:$HOME/.rvm/bin # Add RVM to PATH for scripting
export GOROOT="/usr/local/Cellar/go/1.2/libexec/"
export GOPATH=$HOME/gocode:$HOME/scm/branded/go/

